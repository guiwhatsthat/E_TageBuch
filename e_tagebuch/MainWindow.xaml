<Window x:Class="e_tagebuch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:e_tagebuch"
        mc:Ignorable="d"
        Title="Login" Height="177" Width="275">
    <Grid Margin="0,0,2,-2">
        <Button Content="Anmelden" x:Name="bntLogin" HorizontalAlignment="Left" Margin="159,112,0,0" VerticalAlignment="Top" Width="75" Click="bntLogin_Click"/>
        <Label Content="Benutzername" x:Name="lblUsername" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="114,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Passwort" x:Name="lblPW" HorizontalAlignment="Left" Margin="23,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.509,-0.538"/>
        <PasswordBox x:Name="PWBox" HorizontalAlignment="Left" Margin="114,72,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
