        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="85,161,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Passwort" x:Name="lblPQ" HorizontalAlignment="Left" Margin="85,190,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PWBox" HorizontalAlignment="Left" Margin="85,231,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
