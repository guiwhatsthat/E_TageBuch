        xmlns:local="clr-namespace:e_tagebuch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button" x:Name="bntLogin" HorizontalAlignment="Left" Margin="68,314,0,0" VerticalAlignment="Top" Width="75" Click="bntLogin_Click"/>
        <Label Content="Label" x:Name="lblTitle" HorizontalAlignment="Left" Margin="85,33,0,0" VerticalAlignment="Top"/>
